@model TitleQuestionDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Düzenle</h1>
<!--Departman Listesi-->
<div class="container mt-4">
    <form method="post">
        <table id="datatable"
               class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Soru</th>
                    <th>Sorunun Ağırlığı</th>


                    <th>Düzenle</th>

                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>@Model.ID</td>
                    <td><input asp-for="Content" type="text" class="form-control"></td>
                    <td> <input asp-for="Weight" type="number" class="form-control"></td>

                    <input asp-for="CreatedDate" type="hidden" class="form-control">
                    <input asp-for="TitleID" type="hidden" />
                    <input asp-for="ReturnUrl" type="hidden" />
                    

                    <td> <button type="submit" class="btn btn-warning">Düzenle</button></td>


                </tr>




            </tbody>
        </table>
    </form>
</div>
<!--Departman Listesi-->


